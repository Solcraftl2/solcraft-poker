{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/api",
      "dest": "/main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/main.py"
    }
  ]
}
